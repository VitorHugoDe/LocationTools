@model IEnumerable<LocacaoModel>

<div call="container"
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Locação</h1>
        <a class="btn btn-success mx-2" asp-controller="Locacao" asp-action="Cadastrar">Cadastrar nova locação</a>
    </div>


<table class="table table-dark table table-hover">
    <thead>
        <tr>
            <th scope="col">Locatario</th>
            <th scope="col">Locador</th>
            <th scope="col">Ferramenta Emprestada</th>
            <th scope="col">Ultima Atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null){
            @foreach(var locacao in Model){
                <tr>
                    <th scope="row">@locacao.Locatario</th>
                    <td>@locacao.Locador</td>
                    <td>@locacao.FerramentaEmprestada</td>
                    <td>@locacao.DataUltimaAtualizacao</td>
                    <td>
                        <a asp-controller="Locacao" asp-action="Editar" asp-route-Id="@locacao.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Locacao" asp-action="Excluir" asp-route-Id="@locacao.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }

            
        }
      
    </tbody>
</table>
</div>